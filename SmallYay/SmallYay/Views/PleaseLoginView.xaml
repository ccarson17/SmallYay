<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SmallYay.Views.PleaseLoginView">
  <ContentView.Content>
        <StackLayout>
            <Frame BackgroundColor="{DynamicResource UI_Color_1}" Padding="24" CornerRadius="0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="4*"/>
                    </Grid.ColumnDefinitions>
                    <Image Source="WineApp_Logo.png" HeightRequest="75" HorizontalOptions="Start" Grid.Row="0" Grid.Column="0"></Image>
                    <StackLayout Grid.Row="0" Grid.Column="1" Spacing="0" Margin="0" Padding="0">
                        <Label Text="SmallYAY" HorizontalTextAlignment="Start" TextColor="{DynamicResource Default_Text_Color}" FontSize="36"/>
                        <Label Text="Track Your Wine" HorizontalTextAlignment="Start" TextColor="{DynamicResource Default_Text_Color}" FontSize="16"/>
                    </StackLayout>
                </Grid>
            </Frame>
            <StackLayout VerticalOptions="Center">
                <Label x:Name="WelcomeLabel" Text="You are not logged in!" FontSize="Title" Padding="30" HorizontalTextAlignment="Center"/>
            </StackLayout>
        </StackLayout>
    </ContentView.Content>
</ContentView>